            private void bossHints()
            {
                var hint = this.PickFrom(new[]
                {
                    "Ooops! Try not to attack when its blue!!",
                    "This boss is invincible when its blue!!",
                    "Watch out!! Hold your fire when it's blue!"
                });
                OnStageMessage(hint);
            }

            private void phase0Hints()
