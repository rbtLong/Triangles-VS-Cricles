<UserControl x:Class="TrianglesVCircles.GameControls.Sound.SoundControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sound="clr-namespace:TrianglesVCircles.GameControls.Sound"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
        <MediaElement Visibility="Collapsed"
                      LoadedBehavior="Play"
                      Name="Sound" 
                      Volume="{Binding RelativeSource={RelativeSource 
                        AncestorType={x:Type sound:SoundControl}, 
                        Mode=FindAncestor}, Path=Volume}"/>
</UserControl>
